<%- include('partials/_header'); -%>

<h1>Editar tarea</h1>

<div class="card">
    <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
            <div class="form-group mt-3">
                <input type="text" name="Tarea" value="<%= data.tarea %>" class="form-control">
            </div>
            <div class="form-group mt-3">
                <input type="date" name="Fecha" value="<%= data.fecha %>" class="form-control">
            </div>
            <div class="form-group mt-3">
                <textarea type="text" name="Descripcion" value="<%= data.descripcion %>" class="form-control"
                    rows="3"> </textarea>
                <div class="form-group mt-3">
                    <input type="checkbox" name="Estatus" value="Completada" class="done-checkbox"> Completada</input>
                    <input type="checkbox" name="Estatus" value="No Completada" class="done-checkbox"> No
                    Completada</input>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Editar tarea</button>

        </form>
    </div>
</div>

<%- include('partials/_footer'); -%>